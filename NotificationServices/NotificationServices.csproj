<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>NotificationServices</PackageId>
    <Version>1.0.3</Version>
    <Authors>Arjav Dave</Authors>
    <Company>Royale Cheese</Company>
    <PackageDescription>A simple to use package to send out notifications via email, sms and push notifications. Just pass the credentials and 
      you should be good to go.</PackageDescription>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Email\" />
    <Folder Include="SMS\" />
    <Folder Include="PushNotifications\" />
    <Folder Include="Models\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AWSSDK.SimpleEmail" Version="3.3.101.41" />
    <PackageReference Include="AWSSDK.Core" Version="3.3.103.35" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="3.3.101.60" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>
</Project>
